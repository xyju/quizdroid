<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.xyju.quizdroidpart2.OverviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/ovfrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/to1"
            android:text="Topic Overview"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff1018ff" />

        <TextView
            android:id="@+id/to2"
            android:text="This is a math quiz for kids."
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to3"
            android:text="Test how much you know about physics by trying our fun physics quiz."
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to4"
            android:text="This is a Marvel Superheroes quiz. Learn and test your Marvel Superheroes knowledge."
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to5"
            android:text="Total Questions: 2"
            android:textSize="20dp"
            android:layout_below="@+id/to4"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/begin"
            android:text="Begin"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</FrameLayout>
