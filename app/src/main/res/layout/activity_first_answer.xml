<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.xyju.quizdroid.FirstAnswerActivity">

    <LinearLayout
        android:id="@+id/math1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/m1answer1"
            android:text="The correct answer is 31"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/m1answer2"
            android:layout_below="@+id/m1answer1"
            android:text=""
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/m1answer3"
            android:text=""
            android:textSize="30dp"
            android:layout_below="@+id/m1answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/physics1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/p1answer1"
            android:text="The correct answer is m/s"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/p1answer2"
            android:layout_below="@+id/p1answer1"
            android:text=""
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/p1answer3"
            android:text=""
            android:textSize="30dp"
            android:layout_below="@+id/p1answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msh1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/msh1answer1"
            android:text="The correct answer is Baxter Building"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msh1answer2"
            android:layout_below="@+id/msh1answer1"
            android:text=""
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msh1answer3"
            android:text=""
            android:textSize="30dp"
            android:layout_below="@+id/msh1answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/m1btn"
        android:text="Next"
        android:textSize="30dp"
        android:layout_below="@+id/math1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
