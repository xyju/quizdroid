<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.xyju.quizdroid.TopicOverviewActivity">

    <TextView
        android:id="@+id/to1"
        android:text="Topic Overview"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff1018ff" />

    <TextView
        android:id="@+id/to2"
        android:text="This is a math quiz for kids."
        android:textSize="20dp"
        android:layout_below="@+id/to1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/to3"
        android:text="Test how much you know about physics by trying our fun physics quiz."
        android:textSize="20dp"
        android:layout_below="@+id/to1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/to4"
        android:text="This is a Marvel Superheroes quiz. Learn and test your Marvel Superheroes knowledge."
        android:textSize="20dp"
        android:layout_below="@+id/to1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/to5"
        android:text="Total Questions: 2"
        android:textSize="20dp"
        android:layout_below="@+id/to4"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/begin1"
        android:text="Begin"
        android:textSize="20dp"
        android:layout_below="@id/to5"
        android:layout_marginTop="200dip"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
